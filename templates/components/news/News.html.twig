<article class="w-full  bg-light-neutral-light dark:bg-dark-neutral-light border border-dark-neutral/40 dark:border-light-neutral/40 rounded-md p-4 hover:border-dark-neutral hover:shadow-md transition-all ">
    <twig:Title:H4> {{ news.title}} </twig:Title:H4>
    <em class="text-black/30 text-sm">publi√© le {{ news.createdAt | date('d/m/y') }}</em>
    <div class="flex flex-col items-start mt-12">
        <div class="w-full text-justify">
            {% if news.image is not empty %}
                <img class="w-full h-auto mx-auto  rounded-lg shadow-md mb-8"
                        src="/images/news/{{ news.image }}"
                        alt="{{ news.title }}"
                />
            {% else %}
                <div class="w-full aspect-video bg-gradient-to-b from-black to-secondary "></div>
            {% endif %}
            <div class="leading-loose pt-6 text-base text-black/80 dark:text-darkBlack/80">
                {{ news.content | raw }}
            </div>
        </div>
    </div>
</article>