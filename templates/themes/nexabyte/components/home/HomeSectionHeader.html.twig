{% if title is not empty %}
    <twig:Title:H2 class="font-poppins-semibold text-secondary dark:text-secondary text-sm leading-5  font-semibold text-center py-3"> {{ title }} </twig:Title:H2>
{% endif %}

<div class="w-full lg:w-5/6 mx-auto p-3 lg:px-6 text-center">
    {% if header is not empty %}
        <twig:Title:H3>{{ header }}</twig:Title:H3>
    {% endif %}

    {% if description is not empty %}
        <p class="font-poppins-regular text-base leading-5 py-3"> {{ description }}</p>
    {% endif %}
</div>