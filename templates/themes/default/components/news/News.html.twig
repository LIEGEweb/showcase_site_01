<article class="w-full p-6 my-12 bg-white/10 rounded-lg shadow-lg">
   {{ component('H3', {label: news.title}) }}
    <em class="text-black/30">publi√© le {{ news.createdAt | date('d/m/y') }}</em>
    <div class="flex flex-col items-start mt-12">
        <div class="leading-8 text-lg text-justify">
            {% if news.image is not empty %}
                <img {{ attributes.defaults({ class:'w-2/3  md:w-1/4 h-auto mx-auto  rounded-lg shadow-md mb-8'}) }}
                     src="/images/news/{{ news.image }}"
                         alt="{{ news.title }}"
                         />
            {% endif %}
            {{ news.content | raw}}
        </div>
    </div>
</article>