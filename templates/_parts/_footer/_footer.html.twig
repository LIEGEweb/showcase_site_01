    <div class="pt-16 px-16 my-16 ">
        <div class="w-full grid md:grid-cols-4 gap-16">
            <article class="col-span-2">
                {% include '_parts/_footer/_contact.html.twig' %}
            </article>
            <article class="">
                {% if app_active_sections.service is defined and app_active_sections.service %}
                    {{ component('Services') }}
                {% endif %}
            </article>
            <article class="hidden md:block ">
                <h4 class="text-base font-semibold mb-5">Liens </h4>
                <ul class="pl-3">
                    <li class="">Accueil</li>
                    {{ (app_active_sections.service is defined and app_active_sections.service) ? '<li class="">Service</li>' : '' }}
                    {{ (app_active_sections.news is defined and app_active_sections.news) ? '<li class="">Actualités</li>' : '' }}
                    <li class="">Contact</li>
                </ul>
            </article>
        </div>
    </div>
    <div class="px-8 py-3 w-full border-t border-black/50  dark:border-darkBlack/50  !text-xs !md:text-sm">
        &copy 2024,
        <twig:link:Link href="https://pixelservices.be"
                        class="underline">
            pixelservices.be
