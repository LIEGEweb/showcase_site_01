{% extends '/layouts/home-section.html.twig' %}

   {% block class %} !py-6 !px-0 {% endblock %}
   {% block id %} hero {% endblock %}
   {% block title_container %}{% endblock %}

   {% block content %}
       <div class="w-full p-0 flex relative ">
           <div class="w-full  h-20 absolute top-0 left-0  bg-gradient-to-b from-light-neutral via-light-neutral/50 to-light-neutral/0 dark:from-black-neutral dark:to-black-neutral/0 block"> </div>
           <div class="w-full  h-20 absolute bottom-0 left-0  bg-gradient-to-b from-light-neutral/0 to-light-neutral dark:from-black-neutral/0 dark:to-black-neutral block"> </div>
           <div class="absolute w-11/12 top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 px-4 py-8 backdrop-blur-sm bg-light-neutral/50 dark:bg-dark-neutral/40 rounded-md">
               <twig:Title:H1 class="!dark:dark-text-base ">{{ setup.headline }}</twig:Title:H1>
               <h1 class="light-text-highlight">{{ setup.headline }}</h1>
               <div class="flex justify-start items-end">
                   <twig:Button:Primary  href="{{ path('app_contact') }}" class="!mb-0 mr-6" >Je contacte</twig:Button:Primary>
               </div>
           </div>

           <div class="-z-20 w-full block  aspect-74 md:aspect-video bg-no-repeat bg-center bg-cover {% if setup.cta_image is empty %} bg-gradient-to-r from-black/20 to-black/10 {% endif %}"
                   {% if setup.cta_image is not empty %} style="background-image: url('/images/home/{{ setup.cta_image }}')"{% endif %} >
           </div>

       </div>
       <div class="my-16 px-5">
           <twig:Title:H2 class="text-left">{{ setup.sub_headline }}</twig:Title:H2>
       </div>

   {% endblock %}