{# templates/login/index.html.twig #}
{% extends '/base.html.twig' %}

{# ... #}

{% block body %}
    <div class="w-full md:w-1/3 min-h-96 mx-auto my-16 p-16 bg-black/5 dark:bg-darkBlack/5 rounded-md">
        <twig:Title:H1 class="!text-2xl mb-8">Connexion</twig:Title:H1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="flex flex-col">

            <label for="username" class="mb-4 dark:text-darkBlack">
                Email:
            </label>
            <input type="text" class="mb-10 bg-light-neutral-light dark:bg-dark-neutral-light text-light-text-base dark:text-dark-text-base font-semibold p-1" id="username" name="_username" value="{{ last_username }}">

            <label for="password" class="mb-4 dark:text-darkBlack">
                Password:
            </label>
            <input type="password" class="bg-light-neutral-light dark:bg-dark-neutral-light text-light-text-base dark:text-dark-text-base  font-semibold p-1" id="password" name="_password">

            {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
            <div class="mt-10">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="bg-light-primary dark:bg-dark-primary text-dark-text-base py-2 px-5 rounded-md">login</button>
            </div>
        </form>
    </div>
{% endblock %}