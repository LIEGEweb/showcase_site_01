{# {% set header = serviceSection.header ?? null %} #}
{# {% set description = serviceSection.description ?? null %} #}
<div class="">
    <section class="w-full  bg-light-neutral-light dark:bg-dark-neutral-light rounded-md">
        <div class="w-4/5 lg:w-1/2 mx-auto p-8 space-y-8">
            {% if title is defined %}
                <twig:Title:H2 class="font-poppins-semibold !text-light-text-highlight !dark:text-dark-text-highlight">
                    {{ title }}
                </twig:Title:H2>
            {% endif %}
            {% if header is defined %}
                <twig:Title:H3>
                    {{ header }}
                </twig:Title:H3>
            {% endif %}

        </div>
        <div class="p-8">
            {% include "contact/_form.html.twig" %}
        </div>
        <div class="w-4/5 lg:w-1/2 mx-auto my-8 py-8 space-y-8">
            {% if description is defined %}
                <p class="font-poppins-regular text-base leading-relaxes">
                    {{ description }}
                </p>
            {% endif %}
        </div>
    </section>
</div>